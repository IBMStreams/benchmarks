DATA_DIR=$(dirname $0)/data
BASE_DATA_DIR=$DATA_DIR/../../../../Data/DataFiles

function checkFile
{
    src=$1
    idx=$2
    ifile=$BASE_DATA_DIR/$src$idx/input-data
    ofile=$DATA_DIR/$src$idx.summary
    diff $ofile <(grep Msg_Rcvd $ifile | awk '{ print $NF }' | awk '{gsub(/R=/,"")}; 1' | sort -nr | head -n 1 | awk '{ print "{rMax="$NF"}" }') || exit 1
}

# Check the files
for s in A B; do
    for (( i=1; i<=20; i++ )); do
        checkFile $s $i
        if [ $? -ne 0 ]; then
            exit 1;
        fi
    done
done
