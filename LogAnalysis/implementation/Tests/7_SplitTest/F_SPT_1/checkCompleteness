DATA_DIR=$(dirname $0)/data

# check if data directory is there
test -d $DATA_DIR || exit 1

# check if there are 40 files
if [ $(ls -1 $DATA_DIR | wc -l) -ne 80 ]; then
    exit 1;
fi

# Check the file sizes
for s in A B; do
    for (( i=1; i<=20; i++ )); do
        if [ $(cat "$DATA_DIR/$s$i.output-split-one" | wc -l) -ne 420000 ]; then
            exit 1;
        fi
        if [ $(cat "$DATA_DIR/$s$i.output-split-two" | wc -l) -ne 420000 ]; then
            exit 1;
        fi
    done
done
