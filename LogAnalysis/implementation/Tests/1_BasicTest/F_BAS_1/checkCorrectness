DATA_DIR=$(dirname $0)/data
BASE_DATA_DIR=$DATA_DIR/../../../../Data/DataFiles

function checkFile
{
    src=$1
    idx=$2
    ifile=$BASE_DATA_DIR/$s$i/input-data
    ofile=$DATA_DIR/$src$idx.output-data
    diff $ifile $ofile || exit 1
}

# Check the files
for s in A B; do
    for (( i=1; i<=20; i++ )); do
        checkFile $s $i        
        if [ $? -ne 0 ]; then
            exit 1;
        fi
    done
done
