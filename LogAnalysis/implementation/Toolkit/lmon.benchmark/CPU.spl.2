namespace lmon.benchmark;

public int32 getCPU(int32 ncpus, uint32 index)
{
    if(ncpus<0)
        return -1;
    if ((((int32) index % ncpus) % (int32)2) == 0)
        return ((int32) index % ncpus)* (int32)2;
    else
        return ((int32) index % ncpus)* (int32)2 - (int32)1;
}
