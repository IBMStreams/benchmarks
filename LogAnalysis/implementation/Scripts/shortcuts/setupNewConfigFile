#Shortcut to create a new config script.
# After creation, the config will likely want to be manually modified.

DIR=$(dirname $0)/..
DIR=$(readlink -f $DIR)
OLDFILE=$DIR/config.sh.template
NEWFILE=$DIR/config.sh

cp $OLDFILE $NEWFILE
chmod +w $NEWFILE

echo "Config file created:  $NEWFILE"
